{
  "manifest_version": 3,
  "name": "Zalo Web Content Masker",
  "version": "1.0",
  "description": "Ẩn nội dung chat Zalo bằng ký tự • và hiện lại khi hover",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://chat.zalo.me/*"],
      "js": ["constants.js", "content-script.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
